<idea-plugin version="2">
  <name>Smalidea</name>
  <description>Idea plugin for smali files</description>
  <version>1.0</version>
  <vendor></vendor>

  <idea-version since-build="107.105"/>

  <extensions defaultExtensionNs="com.intellij">
      <fileTypeFactory implementation="org.jf.smalidea.SmaliFileTypeFactory"/>
      <colorSettingsPage implementation="org.jf.smalidea.SmaliColorsPage"/>
      <lang.parserDefinition language="smali" implementationClass="org.jf.smalidea.SmaliParserDefinition"/>
      <stubElementTypeHolder class="org.jf.smalidea.psi.ElementTypes"/>
      <java.shortNamesCache implementation="org.jf.smalidea.SmaliShortClassNameCache"/>
      <stubIndex implementation="org.jf.smalidea.psi.index.SmaliClassNameIndex"/>
      <stubIndex implementation="org.jf.smalidea.psi.index.SmaliMethodNameAndProtoIndex"/>
      <debugger.positionManagerFactory id="groovyPositionManager" implementation="org.jf.smalidea.debugging.SmaliPositionManagerFactory"/>
  </extensions>
</idea-plugin>